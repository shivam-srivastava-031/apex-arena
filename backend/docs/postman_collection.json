{
  "info": {
    "name": "Esports Tournament Booking Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Player One\",\n  \"phone\": \"8888888888\",\n  \"bgmiId\": \"PLAYER_BGMI_01\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"8888888888\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Tournaments - Published",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/tournaments/published/list", "host": ["{{baseUrl}}"], "path": ["tournaments", "published", "list"] }
      }
    },
    {
      "name": "Booking - Book Slot",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/registrations/book-slot", "host": ["{{baseUrl}}"], "path": ["registrations", "book-slot"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tournamentId\": \"{{tournamentId}}\",\n  \"selectedTeamSize\": 2,\n  \"players\": [\n    { \"name\": \"Leader\", \"bgmiId\": \"LEADER_BGMI\" },\n    { \"name\": \"Teammate\", \"bgmiId\": \"TEAM_BGMI\" }\n  ]\n}"
        }
      }
    },
    {
      "name": "Booking - Confirm Payment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/registrations/confirm-payment", "host": ["{{baseUrl}}"], "path": ["registrations", "confirm-payment"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"paymentId\": \"{{paymentId}}\",\n  \"paymentStatus\": \"SUCCESS\",\n  \"providerTransactionId\": \"TXN-123456\"\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" },
    { "key": "tournamentId", "value": "" },
    { "key": "paymentId", "value": "" }
  ]
}
